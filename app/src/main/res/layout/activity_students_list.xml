<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Grade"
            android:padding="4dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:textSize="20dp" />


    </LinearLayout>

    <net.mskurt.neveremptylistviewlibrary.NeverEmptyListView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/students_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/data"
        android:background="@color/primary"
        custom:holderBackgroundColor="@color/primary"
        custom:holderImageBackground="@drawable/sad"
        custom:holderText="no students are added to this year on this school"
        custom:holderTextColor="@color/accent"
        custom:holderTextFontSize="9sp"
        custom:holderTextTopMargin="20dp" />

</RelativeLayout>
